<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    <title>Document</title>
</head>
<body>
    <nav>
         <div class="jumbotron">
            <h1 id="title">Home Service</h1> 
        </div>             
        <ul>
            <li><a href="/home">Home</a></li>
            <li><a href="/service">Make service</a></li>
            <li><a href="/profile">Profile</a></li>
            <li><a href="/logout">Logout</a></li>     
        </ul>
    </nav>

    <div class="card" style="width: 18rem;">
        <div class="card-head">
            <h5 class="card-title">Make Connection</h5>
        </div>

        <form class="form" action="/auth/register" method="post">
            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control" id="name" name="name">
            </div>

            <div class="mb-3">
                <label for="mobile_no" class="form-label">Mobile Number</label>
                <input type="text" class="form-control" id="mobile_no" name="mobile_no">
            </div>

            <div class="mb-3">
                <label for="service" class="form-label">Select Service</label>
                <select name="service" id="service">
                    <option value="LPG">LPG Supply</option>
                    <option value="water">Water Supply</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Get Connection</button>
        </form>
    </div>

    <div class="card">
        <div class="card-body">
            {{message}}
        </div>
    </div>







    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>